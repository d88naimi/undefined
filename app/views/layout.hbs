<body>


<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a style="color: #8ef140;" id="navGit" class="navbar-brand" href="/">GitME</a>
    </div>
    <form class="navbar-form navbar-right" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
    {{#if userInfo}}

        <img class=" navbar-right"  alt="Brand" src="{{userInfo.photo}}" id="loginPhoto">
        <p class="navbar-text navbar-right">Signed in as <b>{{userInfo.name}}</b>  </p>
      
    <form class="navbar-form navbar-right" role="search">
      <button type="submit" class="btn btn-danger">Log Out</button>
    </form>
    {{/if}}
</nav>




{{{body}}}

</body>

</html>
