                  <span class="typeahead__button">
                      <button type="submit">
                          <i class="glyphicon glyphicon-search typeahead__search-icon"></i>
                      </button>
                  </span>
       
              </div>
          </div>
      </form>
      <!-- search bar end -->
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Link</a></li>
