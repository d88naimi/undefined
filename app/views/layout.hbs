      <!-- autocomplete search bar using typeahead -->


      <form id="form-user_v1" name="form-user_v1">
          <div class="typeahead__container">
              <div class="typeahead__field">
       
                  <span class="typeahead__query">
                      <input class="js-typeahead-user_v1" name="user_v1[query]" type="search" placeholder="Search" autocomplete="off">
