
<!-- body for layout -->
<section id="mainDashboardContainer">

  <!-- left side bar containing main info -->
  <div id="leftSidebar">
    <!-- <img src="{{userInfo.photo}}" alt="userPhoto"> -->
    <div class="image-container">
      <img src="{{userInfo.photo}}" alt="{{userInfo.name}} profile image for dashboard" class="mypic">
      <button id="change-photo" class="btn btn-success">
        <span class="glyphicon glyphicon-edit"></span> Edit
      </button>
    </div>
    <input type="file" id="image-file-input" accept="image/*">
    <h3>Hello, <b>{{userInfo.name}}</b> !</h3>
    <h4>{{userInfo.githubUsername}}</h4>
    <h4>{{userInfo.githubId}}</h4>
  </div>

  <!-- right container with all the projects -->
  <div id="mainProjectsContainer">
    <div id="projectBox">
      <table class="table">
        <thead>
        <th>Project</th>
        <th>Screenshot</th>
        <th>Description</th>
        <th>Add to Portfolio</th>
        <th>Edit Info</th>
        </thead>
        <tbody>
        {{#each projectInfo}}
          <tr data-rowId="{{this.id}}">
            <td><b>{{this.name}}</b></td>
            {{#if this.thumbnail}}
            <td><img class="projectThumbnail" src="{{this.screenshot}}" alt="Project {{this.name}} live screenshot"></td>
            {{else}}
            <td>N/A</td>
            {{/if}}
            <td class="descField">{{this.description}}</td>
            <td>
              <button type="submit" class="btn btn-danger addBtn"  data-id="{{this.id}}">Add</button>
            </td>
            <td>
              <button type="submit" class="btn btn-warning editBtn"  data-id="{{this.id}}" data-name="{{this.name}}" data-description="{{this.description}}" data-role="{{this.role}}" data-teamMates="{{this.teamMate}}" data-url="{{this.url}}"" data-screenshot="{{this.screenshot}}">Edit</button>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>


</section>

<!-- ADD ANTOHER PROJECT -->
<div id="addProjectBox" class="jumbotron">

  <p>Wanna add more projects?</p>
  <button class="btn btn-primary btn-lg" id="addButton"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Project</button>

</div>

<div class="animatedBackground">
  <br>
</div>

<div id="makePortfolioBox" class="jumbotron">

  <p>Save your public profile</p>
  <button type="submit" class="btn btn-danger btn-lg" id="makeProject"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> SAVE</button>

</div>



<!-- ************************MODAL START*************************************** -->
<div id="addProjectModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <h2>Tell us about your project</h2>
    <br>
    <form action="/addProject" method="POST">

      <input class="form-control" type="text" name="name" placeholder="what's your project's name?">
      <br>
      <input class="form-control" type="text" name="description" placeholder="give us a description">
      <br>
      <input class="form-control" type="text" name="role" placeholder="what was your role?">
      <br>
      <input class="form-control" type="text" name="teamMate" placeholder="did you have teammates?">
      <br>
      <hr>
      <h3>ADD YOUR SKILLS</h3>
      <table>
        <tbody id="skillTable">
        </tbody>
      </table>
      <input class="form-control" id="input-skill" type="text" list="skill-list">
      <datalist id="skill-list"></datalist>
      <br>
      <!--<button class="btn btn-lg btn-primary" id="addSkillButton"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Skills</button>-->
      <!--<br>-->
      <hr>
      <br>
      <button type="submit" class="btn btn-primary btn-lg" id="submit"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Submit</button>

    </form>


  </div>
</div>
<!-- ************************MODAL END*************************************** -->

<!-- ******************** EDIT MODAL START*************************************** -->
<div id="editProjectModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <h2>Edit your project</h2>
    <br>
    <form action='/update-portfolio?_method=PUT' method='POST'>
	<img class="projectThumbnail" id="projectImage" src="" alt="project thumbnail">
	<br>
	<br>
      <input id="input1" class="form-control" type="text" name="name" placeholder="what's your project's name?">
      <br>
      <input id="input2" class="form-control" type="text" name="description" placeholder="give us a description">
      <br>
      <input id="input3" class="form-control" type="text" name="role" placeholder="what was your role?">
      <br>
      <input id="input4" class="form-control" type="text" name="teamMate" placeholder="did you have teammates?">
      <br>
       <input id="input5" class="form-control" type="text" name="url" placeholder="did the url change?">
      <br>
      <hr>
      <h3>ADD YOUR SKILLS</h3>
      <table>
        <tbody id="skillTable">
        </tbody>
      </table>
      <input class="form-control" id="input-skill" type="text" list="skill-list">
      <datalist id="skill-list"></datalist>
      <br>
      <hr>
      <br>
      <button type="submit" class="btn btn-primary btn-lg themeButton" id="editSubmitButton"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Save Edit</button>

    </form>


  </div>
</div>
<!-- ************************MODAL END*************************************** -->



